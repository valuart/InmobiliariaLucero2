@model IEnumerable<InmobiliariaLucero.Models.Pago>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado Pagos</h1>

<p>
    <a asp-action="Create">Crear Pago</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NroPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Importe)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato.Inmueble.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NroPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importe)
            </td>
            <td>
                @(item.Contrato.Inmueble.Direccion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalles", "Details", new {id=item.Id}) |
                @Html.ActionLink("Eliminar", "Delete", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
